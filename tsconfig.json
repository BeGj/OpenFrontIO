{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "packages",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": ["packages/*/src/**/*.ts"],
  "exclude": ["node_modules"]
}
